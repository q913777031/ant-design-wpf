<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===================================================================
         ToolTip Style â€” Ant Design dark tooltip
         Background: AntDesign.Brush.Bg.Spotlight (~rgba(0,0,0,0.85) light)
         =================================================================== -->
    <Style x:Key="AntDesign.ToolTip" TargetType="{x:Type ToolTip}">
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="{DynamicResource AntDesign.Brush.Bg.Spotlight}" />
        <Setter Property="Foreground" Value="{DynamicResource AntDesign.Brush.Text.LightSolid}" />
        <Setter Property="FontSize" Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HasDropShadow" Value="False" />
        <Setter Property="Placement" Value="Top" />
        <Setter Property="VerticalOffset" Value="-4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <Border
                        x:Name="TooltipBorder"
                        Background="{TemplateBinding Background}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        MaxWidth="250">
                        <Border.Effect>
                            <DropShadowEffect
                                Color="#000000"
                                Opacity="0.20"
                                BlurRadius="8"
                                ShadowDepth="3"
                                Direction="270" />
                        </Border.Effect>
                        <ContentPresenter
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TextElement.FontSize="{TemplateBinding FontSize}"
                            TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Default implicit style -->
    <Style TargetType="{x:Type ToolTip}" BasedOn="{StaticResource AntDesign.ToolTip}" />

</ResourceDictionary>
