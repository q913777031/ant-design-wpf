<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===================================================================
         Slider Thumb Style
         =================================================================== -->
    <Style x:Key="AntDesign.Slider.Thumb" TargetType="{x:Type Thumb}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Ellipse
                        x:Name="ThumbEllipse"
                        Width="14"
                        Height="14"
                        Fill="{DynamicResource AntDesign.Brush.Bg.Container}"
                        Stroke="{DynamicResource AntDesign.Brush.Primary}"
                        StrokeThickness="2">
                        <Ellipse.Effect>
                            <DropShadowEffect
                                Color="#000000"
                                Opacity="0.08"
                                BlurRadius="4"
                                ShadowDepth="1"
                                Direction="270" />
                        </Ellipse.Effect>
                    </Ellipse>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbEllipse" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                            <Setter TargetName="ThumbEllipse" Property="Width" Value="16" />
                            <Setter TargetName="ThumbEllipse" Property="Height" Value="16" />
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="ThumbEllipse" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Active}" />
                            <Setter TargetName="ThumbEllipse" Property="Width" Value="16" />
                            <Setter TargetName="ThumbEllipse" Property="Height" Value="16" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ThumbEllipse" Property="Fill"
                                    Value="{DynamicResource AntDesign.Brush.Bg.Layout}" />
                            <Setter TargetName="ThumbEllipse" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Border}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================================================================
         RepeatButton for track segments (before / after thumb)
         =================================================================== -->
    <!-- Filled segment (left / top of thumb) -->
    <Style x:Key="AntDesign.Slider.RepeatButton.Fill" TargetType="{x:Type RepeatButton}">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border
                        x:Name="FillBorder"
                        Background="{DynamicResource AntDesign.Brush.Primary}"
                        CornerRadius="2"
                        Height="4"
                        VerticalAlignment="Center" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="FillBorder" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Secondary}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Track segment (right / bottom of thumb) -->
    <Style x:Key="AntDesign.Slider.RepeatButton.Track" TargetType="{x:Type RepeatButton}">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border
                        x:Name="TrackBorder"
                        Background="{DynamicResource AntDesign.Brush.Fill.Secondary}"
                        CornerRadius="2"
                        Height="4"
                        VerticalAlignment="Center" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="TrackBorder" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Quaternary}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================================================================
         Horizontal Slider Style
         =================================================================== -->
    <Style x:Key="AntDesign.Slider.Horizontal" TargetType="{x:Type Slider}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Slider}">
                    <Border Background="Transparent" Padding="7,0">
                        <Track x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton
                                    Style="{StaticResource AntDesign.Slider.RepeatButton.Fill}"
                                    Command="Slider.DecreaseLarge" />
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource AntDesign.Slider.Thumb}" />
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton
                                    Style="{StaticResource AntDesign.Slider.RepeatButton.Track}"
                                    Command="Slider.IncreaseLarge" />
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================================================================
         Vertical RepeatButton variants for vertical slider
         =================================================================== -->
    <Style x:Key="AntDesign.Slider.RepeatButton.Fill.Vertical" TargetType="{x:Type RepeatButton}">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border
                        x:Name="FillBorder"
                        Background="{DynamicResource AntDesign.Brush.Primary}"
                        CornerRadius="2"
                        Width="4"
                        HorizontalAlignment="Center" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="FillBorder" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Secondary}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AntDesign.Slider.RepeatButton.Track.Vertical" TargetType="{x:Type RepeatButton}">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border
                        x:Name="TrackBorder"
                        Background="{DynamicResource AntDesign.Brush.Fill.Secondary}"
                        CornerRadius="2"
                        Width="4"
                        HorizontalAlignment="Center" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="TrackBorder" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Quaternary}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================================================================
         Vertical Slider Style
         =================================================================== -->
    <Style x:Key="AntDesign.Slider.Vertical" TargetType="{x:Type Slider}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Slider}">
                    <Border Background="Transparent" Padding="0,7">
                        <Track x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton
                                    Style="{StaticResource AntDesign.Slider.RepeatButton.Track.Vertical}"
                                    Command="Slider.DecreaseLarge" />
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource AntDesign.Slider.Thumb}" />
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton
                                    Style="{StaticResource AntDesign.Slider.RepeatButton.Fill.Vertical}"
                                    Command="Slider.IncreaseLarge" />
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================================================================
         Default implicit Slider style â€” dispatches to Horizontal / Vertical
         =================================================================== -->
    <Style x:Key="AntDesign.Slider" TargetType="{x:Type Slider}"
           BasedOn="{StaticResource AntDesign.Slider.Horizontal}">
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Template"
                        Value="{Binding Source={StaticResource AntDesign.Slider.Vertical},
                                        Path=Template}" />
                <Setter Property="Width" Value="20" />
                <Setter Property="Height" Value="Auto" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type Slider}" BasedOn="{StaticResource AntDesign.Slider}" />

</ResourceDictionary>
