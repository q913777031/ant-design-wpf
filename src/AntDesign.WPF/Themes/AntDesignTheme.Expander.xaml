<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Ant Design WPF — Expander (Collapse / Accordion) Style
        Design:
          - Outer border  : 1 px Border brush, CornerRadius.LG (8)
          - Header        : padding 12,16; Bg.Layout bg; border-bottom 1 px Border
          - Arrow icon    : chevron that rotates 180° when expanded
          - Content       : padding 16; Bg.Container (white) bg
          - Collapsed     : content area has Visibility Collapsed
    -->

    <Style TargetType="{x:Type Expander}">
        <Setter Property="Background"          Value="{DynamicResource AntDesign.Brush.Bg.Container}" />
        <Setter Property="Foreground"          Value="{DynamicResource AntDesign.Brush.Text}" />
        <Setter Property="FontSize"            Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="BorderBrush"         Value="{DynamicResource AntDesign.Brush.Border}" />
        <Setter Property="BorderThickness"     Value="1" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment"   Value="Top" />
        <Setter Property="FocusVisualStyle"    Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Expander}">
                    <!-- Outer card border -->
                    <Border x:Name="OuterBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource AntDesign.CornerRadius.LG}"
                            SnapsToDevicePixels="True">
                        <DockPanel LastChildFill="True">

                            <!-- ─────────── Header ─────────── -->
                            <Border x:Name="HeaderBorder"
                                    DockPanel.Dock="Top"
                                    Background="{DynamicResource AntDesign.Brush.Bg.Layout}"
                                    BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                                    BorderThickness="0,0,0,1"
                                    Padding="16,12"
                                    Cursor="Hand"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Header content -->
                                    <ContentPresenter x:Name="HeaderContent"
                                                      Grid.Column="0"
                                                      ContentSource="Header"
                                                      RecognizesAccessKey="True"
                                                      VerticalAlignment="Center"
                                                      TextElement.FontWeight="SemiBold"
                                                      TextElement.Foreground="{DynamicResource AntDesign.Brush.Text}" />

                                    <!-- Chevron arrow -->
                                    <Path x:Name="ChevronPath"
                                          Grid.Column="1"
                                          Margin="12,0,0,0"
                                          Data="M 3,5 L 10,12 L 17,5"
                                          Stroke="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                          StrokeThickness="1.5"
                                          StrokeLineJoin="Round"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Stretch="Uniform"
                                          Width="12" Height="12"
                                          RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <RotateTransform x:Name="ChevronRotate" Angle="0" />
                                        </Path.RenderTransform>
                                    </Path>
                                </Grid>
                            </Border>

                            <!-- ─────────── Content ─────────── -->
                            <Border x:Name="ContentBorder"
                                    Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                                    Padding="16"
                                    Visibility="Collapsed"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Focusable="False" />
                            </Border>
                        </DockPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Expanded: show content, rotate chevron 180° -->
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ContentBorder" Property="Visibility" Value="Visible" />
                            <Setter TargetName="ChevronPath" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="180" />
                                </Setter.Value>
                            </Setter>
                            <!-- Remove bottom border from header since content follows -->
                            <Setter TargetName="HeaderBorder" Property="BorderThickness" Value="0,0,0,1" />
                        </Trigger>
                        <!-- Collapsed: header border-bottom only on outer card bottom when collapsed -->
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="HeaderBorder" Property="BorderThickness" Value="0" />
                        </Trigger>
                        <!-- Hover on header -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HeaderBorder" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Secondary}" />
                        </Trigger>
                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6" />
                            <Setter TargetName="HeaderBorder" Property="Cursor" Value="Arrow" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
