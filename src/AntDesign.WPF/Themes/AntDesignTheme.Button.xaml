    <!-- =====================================================================
         AntDesignDashedButton
         Dashed border variant: uses a Rectangle with StrokeDashArray inside
         the template to achieve the dashed border effect (WPF Border does not
         support dashed strokes natively).
         ===================================================================== -->
    <Style x:Key="AntDesignDashedButton" TargetType="{x:Type Button}" BasedOn="{x:Null}">
        <Setter Property="Height"            Value="{DynamicResource AntDesign.ControlHeight}" />
        <Setter Property="Padding"           Value="15,4" />
        <Setter Property="FontSize"          Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="FontFamily"        Value="-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif" />
        <Setter Property="Cursor"            Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment"   Value="Center" />
        <Setter Property="FocusVisualStyle"  Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!-- Dashed border rectangle drawn behind content -->
                        <Rectangle x:Name="DashBorder"
                                   Stroke="{DynamicResource AntDesign.Brush.Border}"
                                   StrokeThickness="1"
                                   StrokeDashArray="4 2"
                                   Fill="{DynamicResource AntDesign.Brush.Bg.Container}"
                                   RadiusX="6" RadiusY="6"
                                   SnapsToDevicePixels="True" />
                        <ContentPresenter x:Name="ContentSite"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True"
                                          TextElement.Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="DashBorder" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                        </Trigger>
                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="DashBorder" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Active}" />
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Active}" />
                        </Trigger>
                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="DashBorder" Property="Fill"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Quaternary}" />
                            <Setter TargetName="DashBorder" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Border}" />
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Text.Disabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

