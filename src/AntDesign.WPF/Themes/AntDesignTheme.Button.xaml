    <!-- =====================================================================
         Size variants
         These styles use BasedOn to inherit the visual template from the
         default style and only override dimension / typography properties.
         ===================================================================== -->

    <!-- Small button — 24 px height, compact padding -->
    <Style x:Key="AntDesignSmallButton" TargetType="{x:Type Button}"
           BasedOn="{StaticResource AntDesignDefaultButton}">
        <Setter Property="Height"    Value="{DynamicResource AntDesign.ControlHeight.SM}" />
        <Setter Property="Padding"   Value="7,0" />
        <Setter Property="FontSize"  Value="{DynamicResource AntDesign.FontSize.SM}" />
    </Style>

    <!-- Small primary button -->
    <Style x:Key="AntDesignSmallPrimaryButton" TargetType="{x:Type Button}"
           BasedOn="{StaticResource AntDesignPrimaryButton}">
        <Setter Property="Height"    Value="{DynamicResource AntDesign.ControlHeight.SM}" />
        <Setter Property="Padding"   Value="7,0" />
        <Setter Property="FontSize"  Value="{DynamicResource AntDesign.FontSize.SM}" />
    </Style>

    <!-- Large button — 40 px height, generous padding -->
    <Style x:Key="AntDesignLargeButton" TargetType="{x:Type Button}"
           BasedOn="{StaticResource AntDesignDefaultButton}">
        <Setter Property="Height"    Value="{DynamicResource AntDesign.ControlHeight.LG}" />
        <Setter Property="Padding"   Value="15,6" />
