<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Ant Design WPF — CheckBox Style
        Template anatomy:
          StackPanel (Horizontal)
            ├─ Grid (16 × 16)  — the checkbox frame
            │    ├─ Border "CheckBorder"    — outer ring (1 px, border color, 2 px radius)
            │    ├─ Border "CheckedFill"    — solid fill when Checked (primary brush)
            │    ├─ Path   "Checkmark"      — ✓ glyph (white, Checked only)
            │    └─ Rectangle "IndetermRect"— – dash (white, Indeterminate only)
            └─ ContentPresenter             — label / content
    -->

    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="FontSize"         Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="FontFamily"       Value="-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif" />
        <Setter Property="Foreground"       Value="{DynamicResource AntDesign.Brush.Text}" />
        <Setter Property="Cursor"           Value="Hand" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <!-- 16 × 16 checkbox box -->
                        <Grid Width="16" Height="16"
                              VerticalAlignment="Center">

                            <!-- Base border — always visible; color changes on hover / checked -->
                            <Border x:Name="CheckBorder"
                                    BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                                    BorderThickness="1"
                                    Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                                    CornerRadius="2"
                                    SnapsToDevicePixels="True" />

                            <!-- Filled background — visible when Checked or Indeterminate -->
                            <Border x:Name="CheckedFill"
                                    Background="{DynamicResource AntDesign.Brush.Primary}"
                                    BorderBrush="{DynamicResource AntDesign.Brush.Primary}"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    Opacity="0"
                                    SnapsToDevicePixels="True" />

                            <!-- Checkmark — M 3,8 L 6.5,11.5 L 13,4.5 -->
                            <Path x:Name="Checkmark"
                                  Data="M 3,8 L 6.5,11.5 L 13,4.5"
                                  Stroke="{DynamicResource AntDesign.Brush.Text.LightSolid}"
                                  StrokeThickness="1.5"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  Stretch="None"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />

                            <!-- Indeterminate dash — horizontal line in the center -->
                            <Rectangle x:Name="IndetermRect"
                                       Width="8" Height="2"
                                       Fill="{DynamicResource AntDesign.Brush.Text.LightSolid}"
                                       RadiusX="1" RadiusY="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed" />
                        </Grid>

                        <!-- Gap between box and label -->
                        <ContentPresenter x:Name="ContentSite"
                                          Margin="8,0,0,0"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True" />
                    </StackPanel>

                    <ControlTemplate.Triggers>

                        <!-- ── Hover (unchecked) ── -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"  Value="True" />
                                <Condition Property="IsChecked"    Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                        </MultiTrigger>

                        <!-- ── Checked ── -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckBorder"  Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                            <Setter TargetName="CheckedFill"  Property="Opacity"  Value="1" />
                            <Setter TargetName="Checkmark"    Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!-- ── Indeterminate ── -->
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="CheckBorder"   Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                            <Setter TargetName="CheckedFill"   Property="Opacity"   Value="1" />
                            <Setter TargetName="IndetermRect"  Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!-- ── Hover (checked) — keep filled, slightly darker ring ── -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsChecked"   Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedFill" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                            <Setter TargetName="CheckedFill" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                            <Setter TargetName="CheckBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                        </MultiTrigger>

                        <!-- ── Disabled ── -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="CheckBorder"  Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Quaternary}" />
                            <Setter TargetName="CheckBorder"  Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Border}" />
                            <Setter TargetName="CheckedFill"  Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Secondary}" />
                            <Setter TargetName="CheckedFill"  Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Border}" />
                            <Setter Property="Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Text.Disabled}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
