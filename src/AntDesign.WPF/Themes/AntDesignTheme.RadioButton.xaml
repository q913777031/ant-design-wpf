<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Ant Design WPF — RadioButton Style
        Template anatomy:
          StackPanel (Horizontal)
            ├─ Grid (16 × 16)  — the radio circle frame
            │    ├─ Ellipse "RadioRing"     — outer ring (1 px, border color)
            │    └─ Ellipse "RadioDot"      — inner filled dot (6 × 6, primary brush, Checked only)
            └─ ContentPresenter             — label / content
    -->

    <Style TargetType="{x:Type RadioButton}">
        <Setter Property="FontSize"         Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="FontFamily"       Value="-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif" />
        <Setter Property="Foreground"       Value="{DynamicResource AntDesign.Brush.Text}" />
        <Setter Property="Cursor"           Value="Hand" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <!-- 16 × 16 radio circle -->
                        <Grid Width="16" Height="16"
                              VerticalAlignment="Center">

                            <!-- Outer ring — border + white fill -->
                            <Ellipse x:Name="RadioRing"
                                     Stroke="{DynamicResource AntDesign.Brush.Border}"
                                     StrokeThickness="1"
                                     Fill="{DynamicResource AntDesign.Brush.Bg.Container}"
                                     SnapsToDevicePixels="True" />

                            <!-- Inner dot — only shown when IsChecked = True -->
                            <Ellipse x:Name="RadioDot"
                                     Width="6" Height="6"
                                     Fill="{DynamicResource AntDesign.Brush.Primary}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Visibility="Collapsed"
                                     SnapsToDevicePixels="True" />
                        </Grid>

                        <!-- Gap between circle and label -->
                        <ContentPresenter x:Name="ContentSite"
                                          Margin="8,0,0,0"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True" />
                    </StackPanel>

                    <ControlTemplate.Triggers>

                        <!-- ── Hover (unchecked) ── -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsChecked"   Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="RadioRing" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                        </MultiTrigger>

                        <!-- ── Checked ── -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="RadioRing" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                            <Setter TargetName="RadioDot"  Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!-- ── Hover (checked) — slightly deeper primary tones ── -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsChecked"   Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="RadioRing" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                            <Setter TargetName="RadioDot"  Property="Fill"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                        </MultiTrigger>

                        <!-- ── Pressed ── -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="RadioRing" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Active}" />
                            <Setter TargetName="RadioDot"  Property="Fill"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Active}" />
                        </Trigger>

                        <!-- ── Disabled ── -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="RadioRing" Property="Fill"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Quaternary}" />
                            <Setter TargetName="RadioRing" Property="Stroke"
                                    Value="{DynamicResource AntDesign.Brush.Border}" />
                            <Setter TargetName="RadioDot"  Property="Fill"
                                    Value="{DynamicResource AntDesign.Brush.Text.Disabled}" />
                            <Setter Property="Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Text.Disabled}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
