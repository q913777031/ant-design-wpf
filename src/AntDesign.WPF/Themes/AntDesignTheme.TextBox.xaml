<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Ant Design WPF — TextBox and PasswordBox Styles
        Implicit styles (no x:Key) are applied to every TextBox / PasswordBox
        inside the merged dictionary scope automatically.
    -->

    <!-- =====================================================================
         TextBox — implicit style
         Template: outer Border (for the frame) + inner ScrollViewer named
         PART_ContentHost (WPF requirement for editable text controls).
         ===================================================================== -->
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Height"            Value="{DynamicResource AntDesign.ControlHeight}" />
        <Setter Property="Padding"           Value="11,4" />
        <Setter Property="FontSize"          Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="FontFamily"        Value="-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Foreground"        Value="{DynamicResource AntDesign.Brush.Text}" />
        <Setter Property="Background"        Value="{DynamicResource AntDesign.Brush.Bg.Container}" />
        <Setter Property="CaretBrush"        Value="{DynamicResource AntDesign.Brush.Text}" />
        <Setter Property="SelectionBrush"    Value="{DynamicResource AntDesign.Brush.Primary.Bg}" />
        <Setter Property="BorderThickness"   Value="1" />
        <Setter Property="AllowDrop"         Value="True" />
        <Setter Property="FocusVisualStyle"  Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <!--
                        Two-layer approach for the focus "box-shadow" simulation:
                        - OuterBorder provides the focus-ring shadow (slightly larger, primary color, 2 px)
                        - InnerBorder provides the visible 1 px border and clips content
                    -->
                    <Grid>
                        <!-- Focus ring layer: only visible when focused -->
                        <Border x:Name="FocusRing"
                                BorderBrush="{DynamicResource AntDesign.Brush.Primary}"
                                BorderThickness="2"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                                Opacity="0"
                                Margin="-1"
                                SnapsToDevicePixels="True" />

                        <!-- Main frame -->
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Hover — swap to primary-hover border -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                        </Trigger>
                        <!-- Focus — primary border + fade in focus ring -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                            <Setter TargetName="FocusRing" Property="Opacity" Value="0.2" />
                        </Trigger>
                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Quaternary}" />
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Border}" />
                            <Setter Property="Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Text.Disabled}" />
                        </Trigger>
                        <!-- Read-only — similar muted appearance -->
                        <Trigger Property="IsReadOnly" Value="True">
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Secondary}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =====================================================================
         PasswordBox — implicit style
         Uses PART_ContentHost inside a ScrollViewer just like TextBox.
         ===================================================================== -->
    <Style TargetType="{x:Type PasswordBox}">
        <Setter Property="Height"            Value="{DynamicResource AntDesign.ControlHeight}" />
        <Setter Property="Padding"           Value="11,4" />
        <Setter Property="FontSize"          Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="FontFamily"        Value="-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Foreground"        Value="{DynamicResource AntDesign.Brush.Text}" />
        <Setter Property="Background"        Value="{DynamicResource AntDesign.Brush.Bg.Container}" />
        <Setter Property="CaretBrush"        Value="{DynamicResource AntDesign.Brush.Text}" />
        <Setter Property="SelectionBrush"    Value="{DynamicResource AntDesign.Brush.Primary.Bg}" />
        <Setter Property="BorderThickness"   Value="1" />
        <Setter Property="FocusVisualStyle"  Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type PasswordBox}">
                    <Grid>
                        <!-- Focus ring layer -->
                        <Border x:Name="FocusRing"
                                BorderBrush="{DynamicResource AntDesign.Brush.Primary}"
                                BorderThickness="2"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                                Opacity="0"
                                Margin="-1"
                                SnapsToDevicePixels="True" />

                        <!-- Main frame -->
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                        </Trigger>
                        <!-- Focus -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                            <Setter TargetName="FocusRing" Property="Opacity" Value="0.2" />
                        </Trigger>
                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource AntDesign.Brush.Fill.Quaternary}" />
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Border}" />
                            <Setter Property="Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Text.Disabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =====================================================================
         Named size variants for TextBox (can be applied via Style=)
         ===================================================================== -->

    <!-- Small TextBox — 24 px height -->
    <Style x:Key="AntDesignSmallTextBox" TargetType="{x:Type TextBox}"
           BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Height"   Value="{DynamicResource AntDesign.ControlHeight.SM}" />
        <Setter Property="Padding"  Value="7,0" />
        <Setter Property="FontSize" Value="{DynamicResource AntDesign.FontSize.SM}" />
    </Style>

    <!-- Large TextBox — 40 px height -->
    <Style x:Key="AntDesignLargeTextBox" TargetType="{x:Type TextBox}"
           BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Height"   Value="{DynamicResource AntDesign.ControlHeight.LG}" />
        <Setter Property="Padding"  Value="11,6" />
        <Setter Property="FontSize" Value="{DynamicResource AntDesign.FontSize.LG}" />
    </Style>

    <!-- Small PasswordBox — 24 px height -->
    <Style x:Key="AntDesignSmallPasswordBox" TargetType="{x:Type PasswordBox}"
           BasedOn="{StaticResource {x:Type PasswordBox}}">
        <Setter Property="Height"   Value="{DynamicResource AntDesign.ControlHeight.SM}" />
        <Setter Property="Padding"  Value="7,0" />
        <Setter Property="FontSize" Value="{DynamicResource AntDesign.FontSize.SM}" />
    </Style>

    <!-- Large PasswordBox — 40 px height -->
    <Style x:Key="AntDesignLargePasswordBox" TargetType="{x:Type PasswordBox}"
           BasedOn="{StaticResource {x:Type PasswordBox}}">
        <Setter Property="Height"   Value="{DynamicResource AntDesign.ControlHeight.LG}" />
        <Setter Property="Padding"  Value="11,6" />
        <Setter Property="FontSize" Value="{DynamicResource AntDesign.FontSize.LG}" />
    </Style>

</ResourceDictionary>
