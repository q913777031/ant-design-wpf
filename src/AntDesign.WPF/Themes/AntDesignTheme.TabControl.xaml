<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Ant Design WPF — TabControl / TabItem Styles
        Design:
          - TabControl : no outer border; bottom border on tab strip
          - TabItem    : padding 16,12; bottom-line indicator (2 px) on selected tab
          - Selected   : Primary foreground + 2 px Primary bottom border
          - Hover      : Primary.Hover foreground
          - Content    : padding 16
    -->

    <!-- =====================================================================
         TabControl — implicit style
         ===================================================================== -->
    <Style TargetType="{x:Type TabControl}">
        <Setter Property="Background"          Value="{DynamicResource AntDesign.Brush.Bg.Container}" />
        <Setter Property="BorderThickness"     Value="0" />
        <Setter Property="BorderBrush"         Value="{x:Null}" />
        <Setter Property="Padding"             Value="0" />
        <Setter Property="FontSize"            Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="Foreground"          Value="{DynamicResource AntDesign.Brush.Text}" />
        <Setter Property="FocusVisualStyle"    Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <DockPanel Background="{TemplateBinding Background}"
                               LastChildFill="True"
                               SnapsToDevicePixels="True">

                        <!-- Tab strip row: items + bottom border line -->
                        <Border DockPanel.Dock="Top"
                                BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                                BorderThickness="0,0,0,1"
                                Background="Transparent">
                            <TabPanel x:Name="HeaderPanel"
                                      IsItemsHost="True"
                                      KeyboardNavigation.TabIndex="1"
                                      Background="Transparent" />
                        </Border>

                        <!-- Content area -->
                        <Border x:Name="ContentPanel"
                                Background="{TemplateBinding Background}"
                                KeyboardNavigation.DirectionalNavigation="Contained"
                                KeyboardNavigation.TabIndex="2"
                                KeyboardNavigation.TabNavigation="Local"
                                Padding="16"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                              ContentSource="SelectedContent"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =====================================================================
         TabItem — implicit style
         The bottom-line indicator is achieved via a 2-px bottom border on the
         root Border whose Visibility is toggled with a Trigger.
         ===================================================================== -->
    <Style TargetType="{x:Type TabItem}">
        <Setter Property="Padding"             Value="16,12" />
        <Setter Property="FontSize"            Value="{DynamicResource AntDesign.FontSize}" />
        <Setter Property="Foreground"          Value="{DynamicResource AntDesign.Brush.Text.Secondary}" />
        <Setter Property="Background"          Value="Transparent" />
        <Setter Property="BorderThickness"     Value="0" />
        <Setter Property="Margin"              Value="0" />
        <Setter Property="Cursor"              Value="Hand" />
        <Setter Property="FocusVisualStyle"    Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <!--
                        Outer border acts as the bottom-line indicator strip.
                        In unselected state bottom border is transparent.
                        In selected state bottom border = Primary brush, 2 px.
                        We overlap the tab-strip's 1 px bottom border by using
                        a negative bottom margin of –1 so the 2-px indicator
                        draws on top cleanly.
                    -->
                    <Border x:Name="TabBorder"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,2"
                            Margin="0,0,0,-1"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="TabContent"
                                          ContentSource="Header"
                                          RecognizesAccessKey="True"
                                          TextElement.FontSize="{TemplateBinding FontSize}"
                                          TextElement.Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover (unselected) -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsSelected"  Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="TabContent" Property="TextElement.Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                        </MultiTrigger>
                        <!-- Selected -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="TabBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                            <Setter TargetName="TabContent" Property="TextElement.Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                            <Setter TargetName="TabContent" Property="TextElement.FontWeight"
                                    Value="SemiBold" />
                        </Trigger>
                        <!-- Hover on selected tab -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsSelected"  Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="TabBorder" Property="BorderBrush"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                            <Setter TargetName="TabContent" Property="TextElement.Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Primary}" />
                        </MultiTrigger>
                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="TabContent" Property="TextElement.Foreground"
                                    Value="{DynamicResource AntDesign.Brush.Text.Disabled}" />
                            <Setter Property="Cursor" Value="Arrow" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
