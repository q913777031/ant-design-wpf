<UserControl x:Class="AntDesign.WPF.Demo.Pages.SwitchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="https://antdesign.wpf/"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Switch"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Switching between two states."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Basic Switch -->
            <TextBlock Text="Basic Switch"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <antd:AntSwitch IsChecked="True" Margin="0,0,12,0" />
                        <TextBlock Text="Default Switch (checked)"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <antd:AntSwitch IsChecked="False" Margin="0,0,12,0" />
                        <TextBlock Text="Default Switch (unchecked)"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <antd:AntSwitch IsEnabled="False" Margin="0,0,12,0" />
                        <TextBlock Text="Disabled Switch"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Section: Small Switch -->
            <TextBlock Text="Small Switch"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <antd:AntSwitch Size="Small" IsChecked="True" Margin="0,0,12,0" />
                        <TextBlock Text="Small Switch (checked)"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <antd:AntSwitch Size="Small" IsChecked="False" Margin="0,0,12,0" />
                        <TextBlock Text="Small Switch (unchecked)"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Section: Switch with Content -->
            <TextBlock Text="Switch with Text Content"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <antd:AntSwitch IsChecked="True"
                                        CheckedContent="On"
                                        UncheckedContent="Off"
                                        Margin="0,0,12,0" />
                        <TextBlock Text="Switch with On/Off label"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
