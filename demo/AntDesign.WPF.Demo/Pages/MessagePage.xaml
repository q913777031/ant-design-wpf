<UserControl x:Class="AntDesign.WPF.Demo.Pages.MessagePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="700">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Message &amp; Notification"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Display global messages as feedback in response to user operations."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Message -->
            <TextBlock Text="Message"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="A lightweight global notice that appears at the top of the screen."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Click to show different message types:"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,16" />
                    <WrapPanel Orientation="Horizontal">
                        <Button Style="{StaticResource AntDesignPrimaryButton}"
                                Content="Success Message"
                                Margin="0,0,8,8"
                                Click="MessageSuccess_Click" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Info Message"
                                Margin="0,0,8,8"
                                Click="MessageInfo_Click" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Warning Message"
                                Margin="0,0,8,8"
                                Click="MessageWarning_Click" />
                        <Button Style="{StaticResource AntDesignDangerButton}"
                                Content="Error Message"
                                Margin="0,0,8,8"
                                Click="MessageError_Click" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Loading Message"
                                Margin="0,0,8,8"
                                Click="MessageLoading_Click" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Section: Notification -->
            <TextBlock Text="Notification"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Display a notification message globally, supports showing as a toast popup in the corner of the screen."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Click to show notification popups in the top-right corner:"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,16" />
                    <WrapPanel Orientation="Horizontal">
                        <Button Style="{StaticResource AntDesignPrimaryButton}"
                                Content="Success Notification"
                                Margin="0,0,8,8"
                                Click="NotifySuccess_Click" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Info Notification"
                                Margin="0,0,8,8"
                                Click="NotifyInfo_Click" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Warning Notification"
                                Margin="0,0,8,8"
                                Click="NotifyWarning_Click" />
                        <Button Style="{StaticResource AntDesignDangerButton}"
                                Content="Error Notification"
                                Margin="0,0,8,8"
                                Click="NotifyError_Click" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Section: Custom Duration -->
            <TextBlock Text="Custom Duration"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Messages with custom display duration:"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,16" />
                    <WrapPanel Orientation="Horizontal">
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="1 Second Message"
                                Margin="0,0,8,8"
                                Click="MessageShort_Click" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="10 Second Message"
                                Margin="0,0,8,8"
                                Click="MessageLong_Click" />
                    </WrapPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
