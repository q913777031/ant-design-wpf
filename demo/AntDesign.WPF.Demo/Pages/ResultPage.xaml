<UserControl x:Class="AntDesign.WPF.Demo.Pages.ResultPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="https://antdesign.wpf/"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="{DynamicResource Result.Title}"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="{DynamicResource Result.Desc}"
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Success Result -->
            <TextBlock Text="{DynamicResource Result.Success}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Result Status="Success"
                             Title="{DynamicResource Result.SuccessTitle}"
                             SubTitle="{DynamicResource Result.SuccessSubTitle}">
                    <WrapPanel HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button Style="{StaticResource AntDesignPrimaryButton}"
                                Content="{DynamicResource Result.GoConsole}"
                                Margin="0,0,8,0" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="{DynamicResource Result.BuyAgain}" />
                    </WrapPanel>
                </antd:Result>
            </Border>

            <!-- Section: Error Result -->
            <TextBlock Text="{DynamicResource Result.Error}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Result Status="Error"
                             Title="{DynamicResource Result.ErrorTitle}"
                             SubTitle="{DynamicResource Result.ErrorSubTitle}">
                    <WrapPanel HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button Style="{StaticResource AntDesignPrimaryButton}"
                                Content="{DynamicResource Result.GoConsole}"
                                Margin="0,0,8,0" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="{DynamicResource Result.BuyAgain}" />
                    </WrapPanel>
                </antd:Result>
            </Border>

            <!-- Section: Warning Result -->
            <TextBlock Text="{DynamicResource Result.Warning}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Result Status="Warning"
                             Title="{DynamicResource Result.WarningTitle}">
                    <Button Style="{StaticResource AntDesignPrimaryButton}"
                            Content="{DynamicResource Result.GoConsole}"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0" />
                </antd:Result>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
