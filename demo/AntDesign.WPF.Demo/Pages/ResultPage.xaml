<UserControl x:Class="AntDesign.WPF.Demo.Pages.ResultPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="https://antdesign.wpf/"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Result"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Used to feed back the results of a series of operational tasks."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Success Result -->
            <TextBlock Text="Success"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Result Status="Success"
                             Title="Successfully Purchased Cloud Server ECS!"
                             SubTitle="Order number: 2017182818828182881 Cloud server configuration takes 1-5 minutes, please wait.">
                    <WrapPanel HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button Style="{StaticResource AntDesignPrimaryButton}"
                                Content="Go Console"
                                Margin="0,0,8,0" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Buy Again" />
                    </WrapPanel>
                </antd:Result>
            </Border>

            <!-- Section: Error Result -->
            <TextBlock Text="Error"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Result Status="Error"
                             Title="Submission Failed"
                             SubTitle="Please check and modify the following information before resubmitting.">
                    <WrapPanel HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button Style="{StaticResource AntDesignPrimaryButton}"
                                Content="Go Console"
                                Margin="0,0,8,0" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Buy Again" />
                    </WrapPanel>
                </antd:Result>
            </Border>

            <!-- Section: Warning Result -->
            <TextBlock Text="Warning"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Result Status="Warning"
                             Title="There are some problems with your operation.">
                    <Button Style="{StaticResource AntDesignPrimaryButton}"
                            Content="Go Console"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0" />
                </antd:Result>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
