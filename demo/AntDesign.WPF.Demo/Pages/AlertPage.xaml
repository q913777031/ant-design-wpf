<UserControl x:Class="AntDesign.WPF.Demo.Pages.AlertPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="https://antdesign.wpf/"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Alert"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Alert component for feedback."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Basic Alerts -->
            <TextBlock Text="Basic Alert Types"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <antd:Alert Type="Success"
                                Message="Success Tips"
                                Margin="0,0,0,12" />
                    <antd:Alert Type="Info"
                                Message="Informational Notes"
                                Margin="0,0,0,12" />
                    <antd:Alert Type="Warning"
                                Message="Warning"
                                Margin="0,0,0,12" />
                    <antd:Alert Type="Error"
                                Message="Error"
                                Margin="0,0,0,0" />
                </StackPanel>
            </Border>

            <!-- Code: Basic Alerts -->
            <Expander Style="{StaticResource CodeBoxExpander}">
                <TextBlock FontFamily="Consolas" FontSize="12" Foreground="#ABB2BF" xml:space="preserve"><Run Foreground="#C678DD">&lt;antd:Alert</Run> <Run Foreground="#D19A66">Type</Run>=<Run Foreground="#98C379">"Success"</Run>
             <Run Foreground="#D19A66">Message</Run>=<Run Foreground="#98C379">"Success Tips"</Run> <Run Foreground="#C678DD">/&gt;</Run>
<Run Foreground="#C678DD">&lt;antd:Alert</Run> <Run Foreground="#D19A66">Type</Run>=<Run Foreground="#98C379">"Info"</Run>
             <Run Foreground="#D19A66">Message</Run>=<Run Foreground="#98C379">"Informational Notes"</Run> <Run Foreground="#C678DD">/&gt;</Run>
<Run Foreground="#C678DD">&lt;antd:Alert</Run> <Run Foreground="#D19A66">Type</Run>=<Run Foreground="#98C379">"Warning"</Run>
             <Run Foreground="#D19A66">Message</Run>=<Run Foreground="#98C379">"Warning"</Run> <Run Foreground="#C678DD">/&gt;</Run>
<Run Foreground="#C678DD">&lt;antd:Alert</Run> <Run Foreground="#D19A66">Type</Run>=<Run Foreground="#98C379">"Error"</Run>
             <Run Foreground="#D19A66">Message</Run>=<Run Foreground="#98C379">"Error"</Run> <Run Foreground="#C678DD">/&gt;</Run></TextBlock>
            </Expander>

            <!-- Section: With Description -->
            <TextBlock Text="With Description"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <antd:Alert Type="Success"
                                Message="Success Tips"
                                Description="Detailed description and advice about successful copywriting."
                                Margin="0,0,0,12" />
                    <antd:Alert Type="Info"
                                Message="Informational Notes"
                                Description="Additional description and information about copywriting."
                                Margin="0,0,0,12" />
                    <antd:Alert Type="Warning"
                                Message="Warning"
                                Description="This is a warning notice about copywriting."
                                Margin="0,0,0,12" />
                    <antd:Alert Type="Error"
                                Message="Error"
                                Description="This is an error message about copywriting."
                                Margin="0,0,0,0" />
                </StackPanel>
            </Border>

            <!-- Code: With Description -->
            <Expander Style="{StaticResource CodeBoxExpander}">
                <TextBlock FontFamily="Consolas" FontSize="12" Foreground="#ABB2BF" xml:space="preserve"><Run Foreground="#C678DD">&lt;antd:Alert</Run> <Run Foreground="#D19A66">Type</Run>=<Run Foreground="#98C379">"Success"</Run>
             <Run Foreground="#D19A66">Message</Run>=<Run Foreground="#98C379">"Success Tips"</Run>
             <Run Foreground="#D19A66">Description</Run>=<Run Foreground="#98C379">"Detailed description..."</Run> <Run Foreground="#C678DD">/&gt;</Run></TextBlock>
            </Expander>

            <!-- Section: Closable Alerts -->
            <TextBlock Text="Closable Alerts"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Click the close button to dismiss:"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,12" />
                    <antd:Alert Type="Info"
                                Message="Closable Alert"
                                Closable="True"
                                Margin="0,0,0,12" />
                    <antd:Alert Type="Warning"
                                Message="Warning with Description"
                                Description="You can close this warning by clicking the X button."
                                Closable="True"
                                Margin="0,0,0,0" />
                </StackPanel>
            </Border>

            <!-- Code: Closable Alerts -->
            <Expander Style="{StaticResource CodeBoxExpander}">
                <TextBlock FontFamily="Consolas" FontSize="12" Foreground="#ABB2BF" xml:space="preserve"><Run Foreground="#C678DD">&lt;antd:Alert</Run> <Run Foreground="#D19A66">Type</Run>=<Run Foreground="#98C379">"Info"</Run>
             <Run Foreground="#D19A66">Message</Run>=<Run Foreground="#98C379">"Closable Alert"</Run>
             <Run Foreground="#D19A66">Closable</Run>=<Run Foreground="#98C379">"True"</Run> <Run Foreground="#C678DD">/&gt;</Run>
<Run Foreground="#C678DD">&lt;antd:Alert</Run> <Run Foreground="#D19A66">Type</Run>=<Run Foreground="#98C379">"Warning"</Run>
             <Run Foreground="#D19A66">Message</Run>=<Run Foreground="#98C379">"Warning with Description"</Run>
             <Run Foreground="#D19A66">Description</Run>=<Run Foreground="#98C379">"You can close this warning."</Run>
             <Run Foreground="#D19A66">Closable</Run>=<Run Foreground="#98C379">"True"</Run> <Run Foreground="#C678DD">/&gt;</Run></TextBlock>
            </Expander>

        </StackPanel>
    </ScrollViewer>
</UserControl>
