<UserControl x:Class="AntDesign.WPF.Demo.Pages.CardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="https://antdesign.wpf/"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Card"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="A container for displaying content in a box with optional title and extra content."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Basic Card -->
            <TextBlock Text="Basic Card"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <antd:Card Title="Card Title"
                       Width="400"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,24">
                <TextBlock Text="Card content goes here. This is a basic card with a title."
                           Foreground="{DynamicResource AntDesign.Brush.Text}"
                           TextWrapping="Wrap" />
            </antd:Card>

            <!-- Section: Card with Extra -->
            <TextBlock Text="Card with Extra Content"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <antd:Card Title="Card with Extra"
                       Width="400"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,24">
                <antd:Card.Extra>
                    <Button Style="{StaticResource AntDesignLinkButton}"
                            Content="More"
                            Padding="0" />
                </antd:Card.Extra>
                <TextBlock Text="This card has extra content in the header (top-right area)."
                           Foreground="{DynamicResource AntDesign.Brush.Text}"
                           TextWrapping="Wrap" />
            </antd:Card>

            <!-- Section: Hoverable Card -->
            <TextBlock Text="Hoverable Card"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <antd:Card Title="Hoverable"
                       Hoverable="True"
                       Width="400"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,24">
                <TextBlock Text="Hover over this card to see the shadow effect."
                           Foreground="{DynamicResource AntDesign.Brush.Text}"
                           TextWrapping="Wrap" />
            </antd:Card>

            <!-- Section: Card without Border -->
            <TextBlock Text="Borderless Card"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Layout}"
                    Padding="12"
                    Margin="0,0,0,24">
                <antd:Card Title="Borderless Card"
                           Bordered="False"
                           Width="400"
                           HorizontalAlignment="Left">
                    <TextBlock Text="This card has no border. Useful on colored backgrounds."
                               Foreground="{DynamicResource AntDesign.Brush.Text}"
                               TextWrapping="Wrap" />
                </antd:Card>
            </Border>

            <!-- Section: Small Size Card -->
            <TextBlock Text="Small Size Card"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <antd:Card Title="Small Card"
                       Size="Small"
                       Width="300"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,24">
                <TextBlock Text="A small card with compact padding."
                           Foreground="{DynamicResource AntDesign.Brush.Text}"
                           TextWrapping="Wrap" />
            </antd:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>
