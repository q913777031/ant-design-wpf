<UserControl x:Class="AntDesign.WPF.Demo.Pages.ProgressPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="clr-namespace:AntDesign.WPF.Controls;assembly=AntDesign.WPF"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Progress"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Display the current progress of an operation flow."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Line Progress -->
            <TextBlock Text="Line Progress"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="30%"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,0,0,4" />
                        <antd:Progress Percent="30" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="50%"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,0,0,4" />
                        <antd:Progress Percent="50" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="70% (Active)"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,0,0,4" />
                        <antd:Progress Percent="70" Status="Active" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="100% (Success)"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,0,0,4" />
                        <antd:Progress Percent="100" Status="Success" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Exception"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,0,0,4" />
                        <antd:Progress Percent="70" Status="Exception" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Section: WPF ProgressBar -->
            <TextBlock Text="WPF ProgressBar (styled)"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Standard WPF ProgressBar with Ant Design theme"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <ProgressBar Minimum="0"
                                 Maximum="100"
                                 Value="45"
                                 Height="8"
                                 Margin="0,0,0,16" />
                    <TextBlock Text="Indeterminate ProgressBar"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <ProgressBar Minimum="0"
                                 Maximum="100"
                                 IsIndeterminate="True"
                                 Height="8" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
