<UserControl x:Class="AntDesign.WPF.Demo.Pages.StepsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="https://antdesign.wpf/"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="900">

            <!-- Page Title -->
            <TextBlock Text="Steps"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="A navigation bar that guides users through the steps of a task."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Horizontal Steps -->
            <TextBlock Text="Horizontal Steps"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <antd:Steps Current="1" Margin="0,0,0,24">
                        <antd:StepItem Title="Finished" Description="This is a description." />
                        <antd:StepItem Title="In Progress" Description="This is a description." />
                        <antd:StepItem Title="Waiting" Description="This is a description." />
                    </antd:Steps>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Previous"
                                Margin="0,0,8,0"
                                Click="PreviousStep_Click" />
                        <Button Style="{StaticResource AntDesignPrimaryButton}"
                                Content="Next"
                                Click="NextStep_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Section: Steps with Error -->
            <TextBlock Text="Steps with Error Status"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Steps Current="1" Status="Error">
                    <antd:StepItem Title="Finished" Description="This is a description." />
                    <antd:StepItem Title="In Process" Description="This is a description." />
                    <antd:StepItem Title="Waiting" Description="This is a description." />
                </antd:Steps>
            </Border>

            <!-- Section: Small Size Steps -->
            <TextBlock Text="Small Size Steps"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Steps Current="1" Size="Small">
                    <antd:StepItem Title="Finished" />
                    <antd:StepItem Title="In Progress" />
                    <antd:StepItem Title="Waiting" />
                </antd:Steps>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
