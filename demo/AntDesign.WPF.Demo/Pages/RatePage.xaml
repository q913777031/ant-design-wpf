<UserControl x:Class="AntDesign.WPF.Demo.Pages.RatePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="https://antdesign.wpf/"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="{DynamicResource Rate.Title}"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="{DynamicResource Rate.Desc}"
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Basic -->
            <TextBlock Text="{DynamicResource Rate.Basic}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <antd:Rate Value="3" Margin="0,0,0,8" />
                    <TextBlock x:Name="RateValue"
                               Text="{DynamicResource Rate.Current}"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                </StackPanel>
            </Border>

            <!-- Code: Basic -->
            <Expander Style="{StaticResource CodeBoxExpander}">
                <TextBlock FontFamily="Consolas" FontSize="12" Foreground="#ABB2BF" xml:space="preserve"><Run Foreground="#C678DD">&lt;antd:Rate</Run> <Run Foreground="#D19A66">Value</Run>=<Run Foreground="#98C379">"3"</Run> <Run Foreground="#C678DD">/&gt;</Run></TextBlock>
            </Expander>

            <!-- Section: Half Star -->
            <TextBlock Text="{DynamicResource Rate.HalfStar}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Rate.HalfDesc}"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,12" />
                    <antd:Rate Value="2.5" AllowHalf="True" />
                </StackPanel>
            </Border>

            <!-- Code: Half Star -->
            <Expander Style="{StaticResource CodeBoxExpander}">
                <TextBlock FontFamily="Consolas" FontSize="12" Foreground="#ABB2BF" xml:space="preserve"><Run Foreground="#C678DD">&lt;antd:Rate</Run> <Run Foreground="#D19A66">Value</Run>=<Run Foreground="#98C379">"2.5"</Run>
           <Run Foreground="#D19A66">AllowHalf</Run>=<Run Foreground="#98C379">"True"</Run> <Run Foreground="#C678DD">/&gt;</Run></TextBlock>
            </Expander>

            <!-- Section: Disabled -->
            <TextBlock Text="{DynamicResource Rate.ReadOnly}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <antd:Rate Value="4" Disabled="True" />
            </Border>

            <!-- Section: Custom Count -->
            <TextBlock Text="{DynamicResource Rate.CustomCount}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="{DynamicResource Rate.TenStars}"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   VerticalAlignment="Center"
                                   Width="80" />
                        <antd:Rate Value="7" Count="10" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource Rate.ThreeStars}"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   VerticalAlignment="Center"
                                   Width="80" />
                        <antd:Rate Value="2" Count="3" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Code: Custom Count -->
            <Expander Style="{StaticResource CodeBoxExpander}">
                <TextBlock FontFamily="Consolas" FontSize="12" Foreground="#ABB2BF" xml:space="preserve"><Run Foreground="#C678DD">&lt;antd:Rate</Run> <Run Foreground="#D19A66">Value</Run>=<Run Foreground="#98C379">"7"</Run> <Run Foreground="#D19A66">Count</Run>=<Run Foreground="#98C379">"10"</Run> <Run Foreground="#C678DD">/&gt;</Run>
<Run Foreground="#C678DD">&lt;antd:Rate</Run> <Run Foreground="#D19A66">Value</Run>=<Run Foreground="#98C379">"2"</Run> <Run Foreground="#D19A66">Count</Run>=<Run Foreground="#98C379">"3"</Run> <Run Foreground="#C678DD">/&gt;</Run>
<Run Foreground="#C678DD">&lt;antd:Rate</Run> <Run Foreground="#D19A66">Disabled</Run>=<Run Foreground="#98C379">"True"</Run> <Run Foreground="#D19A66">Value</Run>=<Run Foreground="#98C379">"4"</Run> <Run Foreground="#C678DD">/&gt;</Run></TextBlock>
            </Expander>

        </StackPanel>
    </ScrollViewer>
</UserControl>
