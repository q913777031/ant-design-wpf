<UserControl x:Class="AntDesign.WPF.Demo.Pages.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:antd="https://antdesign.wpf/">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="0">
        <StackPanel Margin="32,24,32,40">

            <!-- ═══════════════════════════════════════════
                 HERO SECTION
                 ═══════════════════════════════════════════ -->
            <Border Margin="0,0,0,32">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Welcome.Title}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    <TextBlock Text="{DynamicResource Welcome.Desc}"
                               FontSize="16"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,8,0,0" />
                    <TextBlock Text="{DynamicResource Welcome.Features}"
                               FontSize="13"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Tertiary}"
                               Margin="0,6,0,0" />
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════
                 STATS CARDS
                 ═══════════════════════════════════════════ -->
            <UniformGrid Rows="1" Columns="4" Margin="0,0,0,28">
                <!-- Controls -->
                <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                        BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                        Padding="20,16"
                        Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="30+"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AntDesign.Brush.Primary}" />
                        <TextBlock Text="{DynamicResource Welcome.Stat.Controls}"
                                   FontSize="13"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
                <!-- Theme files -->
                <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                        BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                        Padding="20,16"
                        Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="18"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AntDesign.Brush.Success}" />
                        <TextBlock Text="{DynamicResource Welcome.Stat.Themes}"
                                   FontSize="13"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
                <!-- Presets -->
                <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                        BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                        Padding="20,16"
                        Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="120"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AntDesign.Brush.Warning}" />
                        <TextBlock Text="{DynamicResource Welcome.Stat.Palettes}"
                                   FontSize="13"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
                <!-- Design Tokens -->
                <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                        BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                        Padding="20,16"
                        Margin="0">
                    <StackPanel>
                        <TextBlock Text="100+"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AntDesign.Brush.Error}" />
                        <TextBlock Text="{DynamicResource Welcome.Stat.Tokens}"
                                   FontSize="13"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- ═══════════════════════════════════════════
                 GETTING STARTED
                 ═══════════════════════════════════════════ -->
            <antd:Card Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Welcome.QuickStart}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AntDesign.Brush.Text}"
                               Margin="0,0,0,12" />

                    <!-- Step 1 -->
                    <Border Background="{DynamicResource AntDesign.Brush.Fill.Quaternary}"
                            CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                            Padding="16,12"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{DynamicResource Welcome.Step1}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource AntDesign.Brush.Primary}" />
                                <TextBlock Text=" " FontSize="13" />
                                <TextBlock Text="{DynamicResource Welcome.Step1.Desc}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource AntDesign.Brush.Text}" />
                            </StackPanel>
                            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,8,0,0">
                                <TextBlock FontFamily="Consolas"
                                           FontSize="13"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}"
                                           Text="dotnet add package AntDesign.WPF --version 1.0.0-preview.1" />
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Step 2 -->
                    <Border Background="{DynamicResource AntDesign.Brush.Fill.Quaternary}"
                            CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                            Padding="16,12"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{DynamicResource Welcome.Step2}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource AntDesign.Brush.Primary}" />
                                <TextBlock Text=" " FontSize="13" />
                                <TextBlock Text="{DynamicResource Welcome.Step2.Desc}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource AntDesign.Brush.Text}" />
                            </StackPanel>
                            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,8,0,0">
                                <TextBlock FontFamily="Consolas"
                                           FontSize="12"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}"
                                           TextWrapping="Wrap"
                                           xml:space="preserve"><Run Text="&lt;Application.Resources&gt;" />
<Run Text="  &lt;ResourceDictionary&gt;" />
<Run Text="    &lt;ResourceDictionary.MergedDictionaries&gt;" />
<Run Text="      &lt;antd:AntDesignTheme /&gt;" />
<Run Text="      &lt;ResourceDictionary Source=&quot;pack://application:,,,/" />
<Run Text="        AntDesign.WPF;component/Themes/AntDesign.Defaults.xaml&quot; /&gt;" />
<Run Text="    &lt;/ResourceDictionary.MergedDictionaries&gt;" />
<Run Text="  &lt;/ResourceDictionary&gt;" />
<Run Text="&lt;/Application.Resources&gt;" /></TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Step 3 -->
                    <Border Background="{DynamicResource AntDesign.Brush.Fill.Quaternary}"
                            CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                            Padding="16,12"
                            Margin="0,0,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{DynamicResource Welcome.Step3}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource AntDesign.Brush.Primary}" />
                                <TextBlock Text=" " FontSize="13" />
                                <TextBlock Text="{DynamicResource Welcome.Step3.Desc}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource AntDesign.Brush.Text}" />
                            </StackPanel>
                            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,8,0,0">
                                <TextBlock FontFamily="Consolas"
                                           FontSize="12"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}"
                                           TextWrapping="Wrap"
                                           xml:space="preserve"><Run Text="&lt;antd:Card&gt;" />
<Run Text="  &lt;antd:Alert Type=&quot;Success&quot; Message=&quot;It works!&quot; /&gt;" />
<Run Text="&lt;/antd:Card&gt;" /></TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </antd:Card>

            <!-- ═══════════════════════════════════════════
                 COLOR PALETTE SHOWCASE
                 ═══════════════════════════════════════════ -->
            <antd:Card Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Welcome.ColorPalette}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AntDesign.Brush.Text}"
                               Margin="0,0,0,12" />

                    <!-- Primary color row -->
                    <TextBlock Text="{DynamicResource Welcome.Primary}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Tertiary}"
                               Margin="0,0,0,6" />
                    <UniformGrid Rows="1" Columns="10" Height="36" Margin="0,0,0,12">
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.Bg}" CornerRadius="4,0,0,4" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.Bg.Hover}" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.Border}" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.Border.Hover}" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.Hover}" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary}" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.Active}" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.7}" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.8}" />
                        <Border Background="{DynamicResource AntDesign.Brush.Primary.9}" CornerRadius="0,4,4,0" />
                    </UniformGrid>

                    <!-- Status colors -->
                    <TextBlock Text="{DynamicResource Welcome.SemanticColors}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Tertiary}"
                               Margin="0,0,0,6" />
                    <UniformGrid Rows="1" Columns="4" Height="36" Margin="0,0,0,12">
                        <Border Background="{DynamicResource AntDesign.Brush.Success}" CornerRadius="4,0,0,4" Margin="0,0,2,0">
                            <TextBlock Text="{DynamicResource Welcome.Success}" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Background="{DynamicResource AntDesign.Brush.Primary}" Margin="0,0,2,0">
                            <TextBlock Text="{DynamicResource Welcome.Info}" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Background="{DynamicResource AntDesign.Brush.Warning}" Margin="0,0,2,0">
                            <TextBlock Text="{DynamicResource Welcome.Warning}" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Background="{DynamicResource AntDesign.Brush.Error}" CornerRadius="0,4,4,0">
                            <TextBlock Text="{DynamicResource Welcome.Error}" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </UniformGrid>

                    <!-- Neutral tones -->
                    <TextBlock Text="{DynamicResource Welcome.NeutralText}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Tertiary}"
                               Margin="0,0,0,6" />
                    <UniformGrid Rows="1" Columns="5" Height="36">
                        <Border Background="{DynamicResource AntDesign.Brush.Text}" CornerRadius="4,0,0,4" Margin="0,0,2,0">
                            <TextBlock Text="{DynamicResource Welcome.Title.Label}" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Background="{DynamicResource AntDesign.Brush.Text.Secondary}" Margin="0,0,2,0">
                            <TextBlock Text="{DynamicResource Welcome.Secondary}" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Background="{DynamicResource AntDesign.Brush.Text.Tertiary}" Margin="0,0,2,0">
                            <TextBlock Text="{DynamicResource Welcome.Tertiary}" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Background="{DynamicResource AntDesign.Brush.Border}" Margin="0,0,2,0">
                            <TextBlock Text="{DynamicResource Welcome.Border}" FontSize="11" Foreground="{DynamicResource AntDesign.Brush.Text}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Background="{DynamicResource AntDesign.Brush.Fill.Quaternary}" CornerRadius="0,4,4,0">
                            <TextBlock Text="{DynamicResource Welcome.Fill}" FontSize="11" Foreground="{DynamicResource AntDesign.Brush.Text}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </antd:Card>

            <!-- ═══════════════════════════════════════════
                 FEATURES
                 ═══════════════════════════════════════════ -->
            <antd:Card Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Welcome.FeaturesTitle}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AntDesign.Brush.Text}"
                               Margin="0,0,0,16" />

                    <UniformGrid Rows="2" Columns="3">
                        <!-- Feature 1 -->
                        <Border Margin="0,0,12,12">
                            <StackPanel>
                                <TextBlock Text="&#127912;" FontSize="24" Margin="0,0,0,6" />
                                <TextBlock Text="{DynamicResource Welcome.Feature1.Title}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}" />
                                <TextBlock Text="{DynamicResource Welcome.Feature1.Desc}"
                                           FontSize="12"
                                           Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </Border>
                        <!-- Feature 2 -->
                        <Border Margin="0,0,12,12">
                            <StackPanel>
                                <TextBlock Text="&#127763;" FontSize="24" Margin="0,0,0,6" />
                                <TextBlock Text="{DynamicResource Welcome.Feature2.Title}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}" />
                                <TextBlock Text="{DynamicResource Welcome.Feature2.Desc}"
                                           FontSize="12"
                                           Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </Border>
                        <!-- Feature 3 -->
                        <Border Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="&#9889;" FontSize="24" Margin="0,0,0,6" />
                                <TextBlock Text="{DynamicResource Welcome.Feature3.Title}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}" />
                                <TextBlock Text="{DynamicResource Welcome.Feature3.Desc}"
                                           FontSize="12"
                                           Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </Border>
                        <!-- Feature 4 -->
                        <Border Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="&#9855;" FontSize="24" Margin="0,0,0,6" />
                                <TextBlock Text="{DynamicResource Welcome.Feature4.Title}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}" />
                                <TextBlock Text="{DynamicResource Welcome.Feature4.Desc}"
                                           FontSize="12"
                                           Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </Border>
                        <!-- Feature 5 -->
                        <Border Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="&#128640;" FontSize="24" Margin="0,0,0,6" />
                                <TextBlock Text="{DynamicResource Welcome.Feature5.Title}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}" />
                                <TextBlock Text="{DynamicResource Welcome.Feature5.Desc}"
                                           FontSize="12"
                                           Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </Border>
                        <!-- Feature 6 -->
                        <Border Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="&#128230;" FontSize="24" Margin="0,0,0,6" />
                                <TextBlock Text="{DynamicResource Welcome.Feature6.Title}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{DynamicResource AntDesign.Brush.Text}" />
                                <TextBlock Text="{DynamicResource Welcome.Feature6.Desc}"
                                           FontSize="12"
                                           Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </antd:Card>

            <!-- ═══════════════════════════════════════════
                 LIVE CONTROLS PREVIEW
                 ═══════════════════════════════════════════ -->
            <antd:Card Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Welcome.LivePreview}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AntDesign.Brush.Text}"
                               Margin="0,0,0,16" />

                    <!-- Buttons row -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="Primary" Style="{DynamicResource AntDesignButton.Primary}" Margin="0,0,8,0" />
                        <Button Content="Default" Style="{DynamicResource AntDesignButton}" Margin="0,0,8,0" />
                        <Button Content="Dashed" Style="{DynamicResource AntDesignButton.Dashed}" Margin="0,0,8,0" />
                        <Button Content="Text" Style="{DynamicResource AntDesignButton.Text}" Margin="0,0,8,0" />
                        <Button Content="Link" Style="{DynamicResource AntDesignButton.Link}" Margin="0,0,8,0" />
                        <Button Content="Danger" Style="{DynamicResource AntDesignButton.Danger}" />
                    </StackPanel>

                    <!-- Tags row -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <antd:Tag Content="Processing" PresetColor="Blue" Margin="0,0,8,0" />
                        <antd:Tag Content="Success" PresetColor="Green" Margin="0,0,8,0" />
                        <antd:Tag Content="Error" PresetColor="Red" Margin="0,0,8,0" />
                        <antd:Tag Content="Warning" PresetColor="Gold" Margin="0,0,8,0" />
                        <antd:Tag Content="Default" Margin="0,0,8,0" />
                        <antd:Tag Content="Purple" PresetColor="Purple" Margin="0,0,8,0" />
                        <antd:Tag Content="Cyan" PresetColor="Cyan" />
                    </StackPanel>

                    <!-- Alerts row -->
                    <antd:Alert Type="Success" Message="{DynamicResource Welcome.Alert.Success}" Description="{DynamicResource Welcome.Alert.SuccessDesc}" Margin="0,0,0,8" />
                    <antd:Alert Type="Info" Message="{DynamicResource Welcome.Alert.Info}" Margin="0,0,0,8" />

                    <!-- Controls row -->
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <antd:AntSwitch IsChecked="True" Margin="0,0,16,0" />
                        <ProgressBar Value="72" Width="200" Height="6" Margin="0,0,16,0"
                                     Style="{DynamicResource AntDesignProgressBar}" />
                        <antd:Badge Count="5">
                            <Border Width="42" Height="42"
                                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                                    Background="{DynamicResource AntDesign.Brush.Fill.Quaternary}">
                                <TextBlock Text="&#128230;" FontSize="20"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </antd:Badge>
                    </StackPanel>
                </StackPanel>
            </antd:Card>

            <!-- ═══════════════════════════════════════════
                 THEME SWITCHING DEMO
                 ═══════════════════════════════════════════ -->
            <antd:Card>
                <StackPanel>
                    <TextBlock Text="{DynamicResource Welcome.RuntimeTheme}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AntDesign.Brush.Text}"
                               Margin="0,0,0,8" />
                    <TextBlock Text="{DynamicResource Welcome.RuntimeTheme.Desc}"
                               FontSize="13"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12" />
                    <Border Background="{DynamicResource AntDesign.Brush.Fill.Quaternary}"
                            CornerRadius="4"
                            Padding="12,8">
                        <TextBlock FontFamily="Consolas"
                                   FontSize="12"
                                   Foreground="{DynamicResource AntDesign.Brush.Text}"
                                   TextWrapping="Wrap"
                                   xml:space="preserve"><Run Text="// Switch to dark theme" />
<Run Text="ThemeHelper.SetBaseTheme(BaseTheme.Dark);" />
<Run Text="" />
<Run Text="// Change primary color" />
<Run Text="ThemeHelper.SetPrimaryColor(PresetColor.Purple);" />
<Run Text="" />
<Run Text="// Update border radius" />
<Run Text="ThemeHelper.SetBorderRadius(8);" /></TextBlock>
                    </Border>
                </StackPanel>
            </antd:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>
