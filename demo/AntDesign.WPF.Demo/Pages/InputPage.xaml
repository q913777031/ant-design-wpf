<UserControl x:Class="AntDesign.WPF.Demo.Pages.InputPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="{DynamicResource Input.Title}"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="{DynamicResource Input.Desc}"
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Basic Input -->
            <TextBlock Text="{DynamicResource Input.BasicUsage}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Input.DefaultTextBox}"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <TextBox Text="{DynamicResource Input.BasicInput}"
                             Width="300"
                             HorizontalAlignment="Left"
                             Margin="0,0,0,16" />

                    <TextBlock Text="{DynamicResource Input.WithPlaceholder}"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <TextBox Width="300"
                             HorizontalAlignment="Left"
                             Margin="0,0,0,16">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="{DynamicResource Input.Placeholder}" Margin="8,0,0,0"
                                                                   Foreground="{DynamicResource AntDesign.Brush.Text.Quaternary}" />
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Text="{DynamicResource Input.Multiline}"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <TextBox Width="300"
                             Height="80"
                             HorizontalAlignment="Left"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Text="{DynamicResource Input.MultilineText}"
                             Margin="0,0,0,0" />
                </StackPanel>
            </Border>

            <!-- Section: Disabled Input -->
            <TextBlock Text="{DynamicResource Input.Disabled}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Input.DisabledLabel}"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <TextBox Text="{DynamicResource Input.DisabledLabel}"
                             Width="300"
                             HorizontalAlignment="Left"
                             IsEnabled="False"
                             Margin="0,0,0,0" />
                </StackPanel>
            </Border>

            <!-- Section: Password Input -->
            <TextBlock Text="{DynamicResource Input.Password}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Input.PasswordField}"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <PasswordBox Width="300"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,0" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
