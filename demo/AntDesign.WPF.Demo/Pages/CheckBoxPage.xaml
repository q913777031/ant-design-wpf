<UserControl x:Class="AntDesign.WPF.Demo.Pages.CheckBoxPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="{DynamicResource CheckBox.Title}"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="{DynamicResource CheckBox.Desc}"
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: CheckBox -->
            <TextBlock Text="{DynamicResource CheckBox.Section}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <CheckBox Content="{DynamicResource CheckBox.Unchecked}"
                              IsChecked="False"
                              Margin="0,0,0,12" />
                    <CheckBox Content="{DynamicResource CheckBox.Checked}"
                              IsChecked="True"
                              Margin="0,0,0,12" />
                    <CheckBox Content="{DynamicResource CheckBox.Indeterminate}"
                              IsChecked="{x:Null}"
                              IsThreeState="True"
                              Margin="0,0,0,12" />
                    <CheckBox Content="{DynamicResource CheckBox.DisabledUnchecked}"
                              IsChecked="False"
                              IsEnabled="False"
                              Margin="0,0,0,12" />
                    <CheckBox Content="{DynamicResource CheckBox.DisabledChecked}"
                              IsChecked="True"
                              IsEnabled="False"
                              Margin="0,0,0,0" />
                </StackPanel>
            </Border>

            <!-- Section: RadioButton -->
            <TextBlock Text="{DynamicResource CheckBox.RadioButton}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="{DynamicResource CheckBox.RadioDesc}"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,12" />
                    <RadioButton Content="{DynamicResource CheckBox.OptionA}"
                                 GroupName="RadioGroup1"
                                 IsChecked="True"
                                 Margin="0,0,0,10" />
                    <RadioButton Content="{DynamicResource CheckBox.OptionB}"
                                 GroupName="RadioGroup1"
                                 Margin="0,0,0,10" />
                    <RadioButton Content="{DynamicResource CheckBox.OptionC}"
                                 GroupName="RadioGroup1"
                                 Margin="0,0,0,10" />
                    <RadioButton Content="{DynamicResource CheckBox.Disabled}"
                                 GroupName="RadioGroup1"
                                 IsEnabled="False"
                                 Margin="0,0,0,0" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
