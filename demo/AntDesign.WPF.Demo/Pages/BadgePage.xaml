<UserControl x:Class="AntDesign.WPF.Demo.Pages.BadgePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:antd="https://antdesign.wpf/"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="{DynamicResource Badge.Title}"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="{DynamicResource Badge.Desc}"
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Badge with Count -->
            <TextBlock Text="{DynamicResource Badge.WithCount}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <WrapPanel Orientation="Horizontal">
                    <antd:Badge Count="5" Margin="0,0,32,0">
                        <Border Width="40" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Primary.Bg}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Primary.Border}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}" />
                    </antd:Badge>
                    <antd:Badge Count="10" Margin="0,0,32,0">
                        <Border Width="40" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Primary.Bg}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Primary.Border}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}" />
                    </antd:Badge>
                    <antd:Badge Count="100" Margin="0,0,32,0">
                        <Border Width="40" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Primary.Bg}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Primary.Border}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}" />
                    </antd:Badge>
                    <antd:Badge Count="1000" OverflowCount="999" Margin="0,0,0,0">
                        <Border Width="40" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Primary.Bg}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Primary.Border}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}" />
                    </antd:Badge>
                </WrapPanel>
            </Border>

            <!-- Section: Badge Dot -->
            <TextBlock Text="{DynamicResource Badge.Dot}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <WrapPanel Orientation="Horizontal">
                    <antd:Badge Dot="True" Margin="0,0,32,0">
                        <Border Width="40" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Primary.Bg}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Primary.Border}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource AntDesign.CornerRadius}" />
                    </antd:Badge>
                    <antd:Badge Dot="True" Margin="0,0,32,0">
                        <TextBlock Text="{DynamicResource Badge.Notification}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AntDesign.Brush.Primary}" />
                    </antd:Badge>
                </WrapPanel>
            </Border>

            <!-- Section: Status Badges -->
            <TextBlock Text="{DynamicResource Badge.Status}"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <antd:Badge Status="Success" Margin="0,0,8,0" />
                        <TextBlock Text="{DynamicResource Badge.Success}" Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <antd:Badge Status="Processing" Margin="0,0,8,0" />
                        <TextBlock Text="{DynamicResource Badge.Processing}" Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <antd:Badge Status="Default" Margin="0,0,8,0" />
                        <TextBlock Text="{DynamicResource Badge.Default}" Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <antd:Badge Status="Error" Margin="0,0,8,0" />
                        <TextBlock Text="{DynamicResource Badge.Error}" Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <antd:Badge Status="Warning" Margin="0,0,8,0" />
                        <TextBlock Text="{DynamicResource Badge.Warning}" Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
