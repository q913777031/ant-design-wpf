<UserControl x:Class="AntDesign.WPF.Demo.Pages.SelectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Select"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Select component to select value from options."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Basic Select -->
            <TextBlock Text="Basic Usage"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Basic ComboBox (Select)"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <ComboBox Width="240"
                              HorizontalAlignment="Left"
                              SelectedIndex="0"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="Option 1" />
                        <ComboBoxItem Content="Option 2" />
                        <ComboBoxItem Content="Option 3" />
                        <ComboBoxItem Content="Option 4" />
                    </ComboBox>

                    <TextBlock Text="Editable ComboBox"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <ComboBox Width="240"
                              HorizontalAlignment="Left"
                              IsEditable="True"
                              Text="Type or select..."
                              Margin="0,0,0,0">
                        <ComboBoxItem Content="Apple" />
                        <ComboBoxItem Content="Banana" />
                        <ComboBoxItem Content="Cherry" />
                        <ComboBoxItem Content="Durian" />
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Section: Disabled Select -->
            <TextBlock Text="Disabled State"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Disabled ComboBox"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <ComboBox Width="240"
                              HorizontalAlignment="Left"
                              IsEnabled="False"
                              SelectedIndex="0"
                              Margin="0,0,0,0">
                        <ComboBoxItem Content="Option 1 (disabled)" />
                        <ComboBoxItem Content="Option 2" />
                    </ComboBox>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
