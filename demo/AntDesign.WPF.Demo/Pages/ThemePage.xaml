<UserControl x:Class="AntDesign.WPF.Demo.Pages.ThemePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="700">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Theme"
                       FontSize="{DynamicResource AntDesign.FontSize.H3}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Configure theme tokens including base theme, primary color, and border radius."
                       FontSize="{DynamicResource AntDesign.FontSize}"
                       Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                       Margin="0,0,0,32" />

            <!-- Section: Light/Dark Toggle -->
            <TextBlock Text="Base Theme"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Toggle between light and dark mode:"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,16" />
                    <WrapPanel Orientation="Horizontal">
                        <Button Style="{StaticResource AntDesignPrimaryButton}"
                                Content="Light Theme"
                                Margin="0,0,8,0"
                                Click="LightTheme_Click" />
                        <Button Style="{StaticResource AntDesignDefaultButton}"
                                Content="Dark Theme"
                                Click="DarkTheme_Click" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Section: Primary Color -->
            <TextBlock Text="Primary Color"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Choose a primary color:"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,16" />
                    <WrapPanel Orientation="Horizontal">
                        <Button Tag="Blue" Content="Blue" Margin="0,0,8,8"
                                Background="#1677FF" Foreground="White"
                                Click="PrimaryColor_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AntDesignDefaultButton}">
                                    <Setter Property="Background" Value="#1677FF" />
                                    <Setter Property="Foreground" Value="White" />
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Tag="Green" Content="Green" Margin="0,0,8,8"
                                Click="PrimaryColor_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AntDesignDefaultButton}">
                                    <Setter Property="Background" Value="#52C41A" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="#52C41A" />
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Tag="Red" Content="Red" Margin="0,0,8,8"
                                Click="PrimaryColor_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AntDesignDefaultButton}">
                                    <Setter Property="Background" Value="#FF4D4F" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="#FF4D4F" />
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Tag="Purple" Content="Purple" Margin="0,0,8,8"
                                Click="PrimaryColor_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AntDesignDefaultButton}">
                                    <Setter Property="Background" Value="#722ED1" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="#722ED1" />
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Tag="Gold" Content="Gold" Margin="0,0,8,8"
                                Click="PrimaryColor_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AntDesignDefaultButton}">
                                    <Setter Property="Background" Value="#FAAD14" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="#FAAD14" />
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Tag="Cyan" Content="Cyan" Margin="0,0,8,8"
                                Click="PrimaryColor_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AntDesignDefaultButton}">
                                    <Setter Property="Background" Value="#13C2C2" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="#13C2C2" />
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Tag="Orange" Content="Orange" Margin="0,0,8,8"
                                Click="PrimaryColor_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AntDesignDefaultButton}">
                                    <Setter Property="Background" Value="#FA8C16" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="#FA8C16" />
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Tag="Magenta" Content="Magenta" Margin="0,0,8,8"
                                Click="PrimaryColor_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AntDesignDefaultButton}">
                                    <Setter Property="Background" Value="#EB2F96" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="#EB2F96" />
                                </Style>
                            </Button.Style>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Section: Border Radius -->
            <TextBlock Text="Border Radius"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Adjust border radius (0 = square, 12 = rounded):"
                               Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}"
                               Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Slider x:Name="RadiusSlider"
                                Minimum="0"
                                Maximum="20"
                                Value="6"
                                Width="240"
                                VerticalAlignment="Center"
                                Margin="0,0,12,0"
                                ValueChanged="RadiusSlider_ValueChanged" />
                        <TextBlock Text="{Binding ElementName=RadiusSlider, Path=Value, StringFormat={}{0:F0}px}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AntDesign.Brush.Text}" />
                    </StackPanel>
                    <Button Style="{StaticResource AntDesignPrimaryButton}"
                            Content="Preview Button"
                            HorizontalAlignment="Left" />
                </StackPanel>
            </Border>

            <!-- Section: Token Preview -->
            <TextBlock Text="Color Token Preview"
                       FontSize="{DynamicResource AntDesign.FontSize.LG}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AntDesign.Brush.Text}"
                       Margin="0,0,0,16" />

            <Border Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                    BorderBrush="{DynamicResource AntDesign.Brush.Border.Secondary}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource AntDesign.CornerRadius}"
                    Padding="24"
                    Margin="0,0,0,24">
                <WrapPanel Orientation="Horizontal">

                    <!-- Primary -->
                    <StackPanel Margin="0,0,16,16">
                        <Border Width="80" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Primary}"
                                CornerRadius="4" />
                        <TextBlock Text="Primary"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>

                    <!-- Success -->
                    <StackPanel Margin="0,0,16,16">
                        <Border Width="80" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Success}"
                                CornerRadius="4" />
                        <TextBlock Text="Success"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>

                    <!-- Warning -->
                    <StackPanel Margin="0,0,16,16">
                        <Border Width="80" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Warning}"
                                CornerRadius="4" />
                        <TextBlock Text="Warning"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>

                    <!-- Error -->
                    <StackPanel Margin="0,0,16,16">
                        <Border Width="80" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Error}"
                                CornerRadius="4" />
                        <TextBlock Text="Error"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>

                    <!-- Bg Container -->
                    <StackPanel Margin="0,0,16,16">
                        <Border Width="80" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Bg.Container}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="4" />
                        <TextBlock Text="Bg Container"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>

                    <!-- Bg Layout -->
                    <StackPanel Margin="0,0,16,16">
                        <Border Width="80" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Bg.Layout}"
                                BorderBrush="{DynamicResource AntDesign.Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="4" />
                        <TextBlock Text="Bg Layout"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>

                    <!-- Text -->
                    <StackPanel Margin="0,0,16,16">
                        <Border Width="80" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Text}"
                                CornerRadius="4" />
                        <TextBlock Text="Text"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>

                    <!-- Border -->
                    <StackPanel Margin="0,0,0,16">
                        <Border Width="80" Height="40"
                                Background="{DynamicResource AntDesign.Brush.Border}"
                                CornerRadius="4" />
                        <TextBlock Text="Border"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Foreground="{DynamicResource AntDesign.Brush.Text.Secondary}" />
                    </StackPanel>

                </WrapPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
